<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/dimen_120"
    android:paddingRight="@dimen/dimen_120"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2018年度记录"
        android:textSize="@dimen/font_size_25"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/dimen_10"
        />

    <ListView
        android:id="@+id/listView_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:divider="@color/transparent"
        android:dividerHeight="0dp"
        android:scrollbars="none"
        android:listSelector="@color/transparent"
        >

    </ListView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_gravity="right"
        >
        <Button
            android:id="@+id/btn_pre_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:background="@drawable/icon_sure"
            android:text="上一页"
            android:gravity="center"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btn_next_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:gravity="center"
            android:text="下一页"
            android:textColor="@color/white"
            android:layout_marginLeft="@dimen/dimen_20"
            android:background="@drawable/icon_sure"
            />

    </LinearLayout>

</LinearLayout>